/* pages/index/index.wxss */
 /* @import "/wxParse/wxParse.wxss";  */
image{
  width: 10rpx;
  height: 10rpx;
}
.container{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.container .align{
  position: fixed;
  top: 0;
  width: 100%;
  opacity: 1;
  z-index: 2;
}
.topInput{
  background-color: #1E90FF;
  height: 8vh;
  width: 100%;
  line-height: 8vh;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center; 
}
.topInput .have icon{
  position: absolute;
  left: 20rpx;
  top: 20rpx;
}
.topInput .have{
  display: flex;
  justify-content: space-around; 
  align-items: center; 
  background-color: #fff;
  width: 95%;
  height: 6vh;
  border-radius: 5px;
  line-height: 6vh;
  margin: 1vh auto;
  position: relative;
  text-align: center;
}
.topInput .have input{
  /* display: inline-block;       */
  height: 1vh;
  line-height: 1vh;
  width: 60%;
  font-size: 30rpx;
  padding: 25rpx 0 25rpx 80rpx;
  text-align: left;     
}
.topInput .have .bottom{
  width: 25%;
  height: 3vh;
  line-height: 3vh;
  border-left: 1px solid #f2f2f2;  
  text-align: center;
  position: relative;
  display: flex;
  align-items: center;
}
.topInput .have image{
  position: absolute;
  top: -1rpx;
  left: 25rpx;
  width: 40rpx;
  height: 40rpx;
}
.topInput .have text{
  height: 3vh; 
  color: #808080;
  font-size: 30rpx;
  text-align: center;
  padding-left: 90rpx;
}
.container .tab{
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
  width: 100%;
  height: 5vh;
  box-shadow: 0px .1px .1px .1px #0000CD inset;     
  /* flex-direction: column; */
}
.container .tab view{
  display: inline-block;
  text-align: center;
  width: 35%;
  height: 5vh;
  line-height: 4vh;
  background-color: #1E90FF;
  color: rgba(255, 255, 255, .6);
  font-size: 30rpx;
  /* box-shadow: 0px .1px .1px .1px #0000CD inset;   */
  /* box-shadow: 0 0 2px .1px #000; */
}
.container .tab view:nth-of-type(1){
  color: rgba(255, 255, 255, 1);
  border-bottom: 3px solid white;
}
.container .content{
  background-color: #f2f2f2; 
  width: 100%;
  padding-top: 13vh;
}
.container .content .first,.container .content .story{
  margin-top: 2vh;
  height: 27vh;
  width: 100%;
  background-color: white;
  text-align: center;
  box-shadow: 0 .6px .6px .6px #ccc;  
}
.container .content .first .head,.container .content .second .sec-head,.container .content .story .head{
  height: 5vh;
  width: 100%;
  line-height: 5vh;
  text-align: center;
  display: flex;
  justify-content: space-between;
  position: relative;
  padding-top: 5rpx;
}
.container .content .first .head image:first-of-type,.container .content .second .sec-head image:first-of-type,.container .content .story .head image:first-of-type{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-top: 1vh;
}
.container .content .first .head text:first-of-type,.container .content .second .sec-head text:first-of-type,.container .content .story .head text:first-of-type{
  position: absolute;
  top: 10rpx;
  left: 80rpx;
  color: #808080;
  font-size: 25rpx;
}
.container .content .first .head image:last-of-type,.container .content .second .sec-head image:last-of-type,.container .content .story .head image:last-of-type{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 20rpx;
  right: 18rpx;
  opacity: .3;
}
.container .content .first view:nth-of-type(2),.container .content .story view:nth-of-type(2){
  height: 3.5vh;
  line-height: 3.5vh;
  font-family: Arial, Helvetica, sans-serif;
  text-align: initial;
  font-size: 33rpx;
  font-weight: 900;
  padding-left: 18rpx;
  padding-top: 10rpx;
  width: 95%;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.container .content .first view:nth-of-type(3),.container .content .story view:nth-of-type(3){
  width: 95%;
  height: 120rpx;
  /* line-height: 10vh; */
  line-height: 40rpx;
  font-size: 30rpx;
  overflow: hidden; 
  text-align: left;
  margin: 10rpx 0rpx;
  margin-left: 18.5rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
   -webkit-box-orient: vertical; 
}
.container .content .story view:nth-of-type(3){
  margin-left: 18.5rpx;
}
.container .content .first view:nth-of-type(4),.container .content .story view:nth-of-type(4){
  margin-left: 18rpx;  
  text-align: initial;
  height: 3vh;
  font-size: 26rpx;
  color: #808080;
  padding: 10rpx 0 20rpx;
}
.container .content .second{
  margin-top: 2vh;
  width: 100%;
  background-color: white;
  box-shadow: 0px .6px .6px .6px #ccc;  
  height: 50vh;
}
.container .content .second .live{
  padding: 15rpx 0;
  margin-left: -30rpx;
  display: flex; 
  flex-direction: row; 
  flex-wrap: no-wrap;  
  height: 41.5vh;
  width: 260%; 
  align-items: center;  
  white-space: nowrap; 
  justify-content: center;  
  overflow:scroll; 
}
.container .content .second .liveItem,.container .content .second .more{
  margin: 1rpx 0;
  box-shadow: 0 0 3px .2px #ccc;
  margin-left: 30rpx;
  width: 18%;
  height: 41vh;
  display: inline-block;
  position: relative;
}
.container .content .second .live .flex{
  margin-left: -10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 30rpx;
}
.container .content .second .liveItem image{
  width: 110rpx;
  height: 110rpx;
}
.container .content .second .liveItem .pic{
  width: 45rpx;
  height: 45rpx; 
  color: #ccc;
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  display: flex;
}
.container .content .second .liveItem .pic image{
  width: 100%;
  height: 100%;
}
.container .content .second .liveItem view:nth-of-type(2){
  padding: 0 30rpx;
  text-align: center;
  font-size: 35rpx;
  font-weight: 900;
  padding-top: 20rpx; 
  white-space: normal;
}
.container .content .second .liveItem view:nth-of-type(3){
  font-size: 30rpx;
  color: #808080;
  padding: 20rpx 0; 
}
.container .content .second .liveItem view:nth-of-type(4){
  font-size: 26rpx;
  background-color: #f2f2f2;
  color: #808080;
  height: 2vh;
  padding: 15rpx;
  text-align: center;
  line-height: 2vh;
  border-radius: 4px;
}
.container .content .second .liveItem view:nth-of-type(5){
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #1E90FF;
  padding: 0rpx 70rpx; 
  height: 5vh;
  line-height: 5vh;
  border-radius: 2px;
  border: 1px solid #1E90FF;
}
.container .content .second .more .flex{
  justify-content: center;
  align-items: center;
}
.container .content .second .more .flex .img{
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 0;
}
.container .content .second .more .flex .word{
  margin-top: 50rpx;
  text-align: center;
  padding-left: 10rpx;
}

.container .content .article{
  margin-top: 2vh;
  height: 43vh;
  width: 100%;
  background-color: white;
  text-align: center;
  box-shadow: 0 .6px .6px .6px #ccc;  
}
.container .content .article .head{
  height: 5vh;
  width: 100%;
  line-height: 5vh;
  text-align: center;
  display: flex;
  justify-content: space-between;
  position: relative;
  padding-top: 5rpx;
}
.container .content .article .head image:first-of-type{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-top: 1vh;
}
.container .content .article .head text:first-of-type{
  position: absolute;
  top: 10rpx;
  left: 80rpx;
  color: #808080;
  font-size: 25rpx;
}
.container .content .article .head image:last-of-type{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 20rpx;
  right: 18rpx;
  opacity: .3;
}
.container .content .article view:nth-of-type(2){
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 15vh;
  padding: 10rpx 0;
}
.container .content .article view:nth-of-type(2) image{
  width: 80%;
  height: 100%;
  background-size: cover;
}
.container .content .article view:nth-of-type(3){
  height: 4vh;
  text-align: initial;
  font-size: 33rpx;
  font-weight: 600;
  padding-left: 18rpx;
  padding-top: 10rpx;
  width: 95%;
  overflow: hidden;
}
.container .content .article view:nth-of-type(4){
  width: 95%;
  height: 10vh;
  font-size: 30rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  margin: 10rpx 0rpx;
  margin-left: 14.5rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.container .content .article view:nth-of-type(5){
  margin-left: 18rpx;  
  text-align: left;
  height: 3vh;
  font-size: 26rpx;
  color: #808080;
  /* padding: 10rpx 0; */
}
.container .content .mark{
  margin-top: 2vh;
  height: 16vh;
  width: 100%;
  background-color: white;
  text-align: center;
  box-shadow: 0 .6px .6px .6px #ccc;  
}
.container .content .mark .head{
  height: 5vh;
  width: 100%;
  line-height: 5vh;
  text-align: center;
  display: flex;
  justify-content: space-between;
  position: relative;
  padding-top: 5rpx;
}
.container .content .mark .head image:first-of-type{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-top: 1vh;
}
.container .content .mark .head text:first-of-type{
  position: absolute;
  top: 10rpx;
  left: 80rpx;
  color: #808080;
  font-size: 25rpx;
}
.container .content .mark .head image:last-of-type{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 20rpx;
  right: 18rpx;
  opacity: .3;
}
.container .content .mark view:nth-of-type(2){
  /* height: 4vh; */
  text-align: initial;
  font-size: 33rpx;
  font-weight: 600;
  padding-left: 18rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 95%;
  overflow: hidden;
}
.container .content .mark view:nth-of-type(3){
  margin-left: 18rpx;  
  text-align: left;
  height: 3vh;
  font-size: 26rpx;
  color: #808080;
  padding: 10rpx 0; 
}
.container .bot{
  height: 7.5vh;
  background-color: #fff;
  width: 100%;
  position: fixed;
  bottom: 0;
  opacity: 1;
  z-index: 2;
  box-shadow: .1px -.1px 5px .1px #ccc; 
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  align-content: center;
  /* border-top: .1px solid #ccc;    */
}
.container .dis{
  display: none;
  /* transition: all 1s linear; */
}
.container .bot view{
  padding-top: 5rpx;
  width: 20%;
  height: 7.5vh;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.container .bot view image{
  position: absolute;
  top: 0;
  width: 60rpx;
  height: 60rpx;
}
.container .bot view view{
  padding-top: 50rpx;
  font-size: 25rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  color: #808080;
}